                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="点名" Width="100"/>
                                    <GridViewColumn Header="N" Width="100" />
                                    <GridViewColumn Header="E" Width="100"/>
                                    <GridViewColumn Header="Z" Width="100"/>
