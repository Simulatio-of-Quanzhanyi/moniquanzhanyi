<UserControl x:Class="Wpf5320.UC_Select"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="250" Background="White" BorderBrush="Black" BorderThickness="1">
    <Grid x:Name="layout" >
        <Label x:Name="lab_message" Content="Label" HorizontalAlignment="Left" VerticalAlignment="Top" Width="83" Height="28"/>
        <Label x:Name="lab_question" Content="Label" HorizontalAlignment="Left" Margin="10,56,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox x:Name="text" HorizontalAlignment="Left" Height="25" Margin="90,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btn_OK" Content="确定" HorizontalAlignment="Left" Margin="10,113,0,0" VerticalAlignment="Top" Width="75" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}"/>
        <Button x:Name="btn_Cancel" Content="取消" HorizontalAlignment="Left" Margin="148,113,0,0" VerticalAlignment="Top" Width="75" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}"/>

    </Grid>
</UserControl>
