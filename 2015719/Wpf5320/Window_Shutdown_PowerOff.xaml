        </Grid>
        <Grid x:Name="Grid1" HorizontalAlignment="Left" Height="182" Margin="64,106,0,0" VerticalAlignment="Top" Width="320" Background="#FFFDFAFA">
            <Button x:Name="dormant" Content="休眠" HorizontalAlignment="Left" Height="36" Margin="48,70,0,0" VerticalAlignment="Top" Width="80" Background="#FF5BA6DA" Click="dormant_Click"/>
            <Button x:Name="poweroff" Content="关机" HorizontalAlignment="Left" Height="36" Margin="185,70,0,0" VerticalAlignment="Top" Width="80" Background="#FF5BA6DA" Click="poweroff_Click"/>
        </Grid>


        <Button x:Name="ESC" Content="Button" HorizontalAlignment="Left" Height="19" Margin="557,294,0,0" VerticalAlignment="Top" Width="19" Background="#FFDDDDDD" Opacity="0" RenderTransformOrigin="-1.138,1.172" Click="ESC_Click" Cursor="Hand"/>
        <Label x:Name="systime" Content="Label" HorizontalAlignment="Left" Height="29" Margin="332,289,0,0" VerticalAlignment="Top" Width="48"/>

    </Grid>
</Window>
